<% layout('layouts/boilerplate') %>

<div id="cluster-map"></div>

<h1 class="mb-3">All campgrounds</h1>

<div class="mb-3">
    <a class="btn btn-primary" href="/campgrounds/new">Add a new campground</a>
</div>

<% for (let campground of campgrounds) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img src="<%= campground.images[Math.floor(Math.random() * campground.images.length)].url %>" alt="" class="img-fluid">
            </div>
            <div class="col-md-8 pt-3 pe-3">
                <h4 class="card-title"><%= campground.title %></h4>
                <p class="card-text"><%= campground.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= campground.location %></small>
                </p>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View Details</a>
            </div>
        </div>
    </div>
<% } %>

<script>
    const mapboxToken = '<%- process.env.MAPBOX_TOKEN %>';
    const campgrounds = { features: <%- JSON.stringify(campgrounds) %> };
</script>

<script src="/scripts/clusterMap.js"></script>
